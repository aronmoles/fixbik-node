{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": false,
    "rootDir": ".",
    "strict": false,
    "noEmit": false,
    "resolveJsonModule": true,
    "noUnusedLocals": false,
    "outDir": "build",
    "baseUrl": "./src",
    "experimentalDecorators": true,
    "paths": {
      "@microk/*": ["microk/*"],
    }
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "./node_modules"
  ]
}
